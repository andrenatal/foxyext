{
  "manifest_version": 2,
  "name": "Hey Foxy Extension",
  "version": "1.0",

  "description": "Agent for Hey Foxy Commands.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "applications": {
      "gecko": {
        "id": "foxycli@example.org",
        "strict_min_version": "50.0"
      }
    },

    "background": {
      "scripts": ["background.js"]
    },

    "browser_action": {
      "default_icon": "icons/message.svg"
    },

    "permissions": ["nativeMessaging"]
}
