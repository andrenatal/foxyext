{
  "manifest_version": 2,
  "name": "Hey Foxy Extension",
  "version": "1.0",

  "description": "Agent for Hey Foxy Commands.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "applications": {
      "gecko": {
        "id": "foxycli@example.org",
        "strict_min_version": "50.0"
      }
    },

    "background": {
      "scripts": ["background.js"]
    },

    "sidebar_action": {
      "default_icon": "icons/FOXY_1.png",
      "default_title" : "Hey Foxy",
      "default_panel": "sidebar/panel.html"
    },

    "browser_action": {
      "default_icon": "icons/message.svg"
    },

    "permissions": ["nativeMessaging",  "bookmarks", "tabs"],

    "commands": {
      "_execute_sidebar_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+Y"
        }
      }
    }
}
